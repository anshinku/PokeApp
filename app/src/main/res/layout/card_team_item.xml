<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="?android:textColorPrimary"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/trainer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/pokemon_trainer" />

            <TextView
                android:id="@+id/teamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="39dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/trainer"
                android:fontFamily="@font/barlow_bold"
                android:gravity="center"
                android:text="@string/name_region"
                android:textColor="?android:textColorPrimaryInverse"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/countPokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/barlow_bold"
                android:gravity="center"
                android:text="@string/_1"
                android:textColor="?android:textColorPrimaryInverse"
                android:textSize="20sp"
                tools:ignore="RelativeOverlap" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/firstPokemon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/teamName"
                android:layout_marginStart="37dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/trainer"
                android:src="@drawable/snorlax_avatar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/secondPokemon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/teamName"
                android:layout_marginTop="11dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/firstPokemon"
                android:src="@drawable/snorlax_avatar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/thirdPokemon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/teamName"
                android:layout_marginStart="16dp"
                android:layout_marginTop="55dp"
                android:layout_toEndOf="@+id/forPokemon"
                android:src="@drawable/snorlax_avatar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/forPokemon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/firstPokemon"
                android:layout_marginStart="37dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/trainer"
                android:src="@drawable/snorlax_avatar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fivePokemon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/firstPokemon"
                android:layout_marginStart="71dp"
                android:layout_marginTop="-35dp"
                android:layout_toEndOf="@+id/thirdPokemon"
                android:src="@drawable/snorlax_avatar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sixPokemon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_above="@+id/fivePokemon"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/secondPokemon"
                android:src="@drawable/snorlax_avatar" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>